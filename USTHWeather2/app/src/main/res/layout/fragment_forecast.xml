<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/firstFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ForecastFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:orientation="horizontal"
        android:background="#edc0e6">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Monday"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/MondayImage"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:src="@drawable/rainny" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Partly Cloud \n 20C-26C"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:orientation="horizontal"
        android:background="#edc0e6">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Tuesday"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/TuesdayImage"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:src="@drawable/sunny" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Hot \n 30C-36C"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:orientation="horizontal"
        android:background="#edc0e6">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Wednesday"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/WednesdayImage"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:src="@drawable/lightning" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=" Cloud with lightning \n 20C-24C"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:orientation="horizontal"
        android:background="#edc0e6">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Thursday"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/ThursdayImage"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:src="@drawable/sunandcloud" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Partly Cloud \n 24C-29C"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:orientation="horizontal"
        android:background="#edc0e6">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Friday"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/FridayImage"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:src="@drawable/rainny" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Partly Cloud \n 20C-26C"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/SaturdayImage"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="#edc0e6"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Saturday" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:src="@drawable/sunandrain" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Rain\n 16C-19C" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:orientation="horizontal"
        android:background="#edc0e6">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Sunday"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/SundayImage"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:src="@drawable/sunny" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Sunny \n 30C-36C"
            android:gravity="center"/>
    </LinearLayout>






</LinearLayout>